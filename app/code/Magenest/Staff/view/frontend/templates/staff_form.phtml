            var url = "<?php echo $block->getBaseUrl().'staff/result' ?>";

            $.ajax({
                url: url,
                type: "POST",
                data: {name:name,level:level},
                showLoader: true,
                cache: false
                success: function(response){
                    console.log(response.output);
                }
            });
            return false;
        })
