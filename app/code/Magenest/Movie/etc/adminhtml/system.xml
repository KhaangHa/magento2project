<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">

    <system>
        <tab id="magenest" translate="label" sortOrder="500">
            <label>Magenest</label>
        </tab>
        <section id="salesforce" translate="label" type="text"
                 sortOrder="100" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>Movie Config</label>
            <tab>magenest</tab>
            <resource>Magenest_Movie::config_movie</resource>
            <group id="moviepage" translate="label" type="text"
                   sortOrder="1" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Magenest settings</label>

                <field id="text_field" translate="label"
                       type="text" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Text Field</label>
                </field>

                <field id="is_enabled" translate="label"
                       type="select" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>
                        <![CDATA[
                            <label>Yes/No_Field_<font style="color:red">abcd</font></label>
                        ]]>
                    </label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>

                </field>
                <field id="select_field" translate="label"
                       type="select" sortOrder="30" showInDefault="1"
                       showInWebsite="1" showInStore="1">

                    <label>Custom Select Field</label>
                    <source_model>Magenest\Movie\Model\Config\Source\ListMode</source_model>
<!--                    <frontend_model>Magenest\Movie\Block\Adminhtml\Model\ListField</frontend_model>-->
                </field>

                <field id="row_in_table" translate="label"
                       type="text" sortOrder="40" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <frontend_model>Magenest\Movie\Block\Adminhtml\Disable</frontend_model>
                    <backend_model>Magenest\Movie\Block\Adminhtml\SystemMovieTable</backend_model>
                    <label>Rows in table "magenest_movie"</label>
                </field>
                <field id="row_in_table_actor" translate="label"
                       type="text" sortOrder="40" showInDefault="1"
                       showInWebsite="1" showInStore="1">
<!--                    <frontend_model>Magenest\Movie\Block\Adminhtml\Model\CustomSelectList</frontend_model>-->
                    <backend_model>Magenest\Movie\Block\Adminhtml\SystemActorTable</backend_model>
                    <label>Rows in table "magenest_actor"</label>
                </field>

                <field id="listbutton" translate="label" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <frontend_model>Magenest\Movie\Block\Adminhtml\Model\Button</frontend_model>
                </field>
            </group>

        </section>

    </system>
</config>